{
  "name": "alecgerona.io",
  "description": "Alec Gerona's personal website.",
  "version": "1.0.0",
  "author": "Alexandre Gerona <alecgerona@gmail.com>",
  "scripts": {
    "dev": "yarn type-check && gatsby develop",
    "build": "yarn type-check && gatsby build",
    "lint:js": "eslint **/*.tsx --fix",
    "lint:style": "stylelint **/*.css --ignore-path .gitignore --fix --allow-empty-input",
    "lint": "yarn lint:js && yarn lint:style",
    "serve": "gatsby serve",
    "clean": "gatsby clean",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "type-check": "tsc --noEmit",
    "pre-commit": "lint-staged",
    "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
    "prepare": "husky install"
  },
  "lint-staged": {
    "*.tsx": "yarn lint:js",
    "*.css": "yarn lint:style"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn pre-commit",
      "commit-msg": "yarn commit-msg"
    }
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "dependencies": {
    "@tailwindcss/typography": "0.5.2",
    "gatsby": "4.11.3",
    "gatsby-plugin-disqus": "1.2.3",
    "gatsby-plugin-feed": "4.11.1",
    "gatsby-plugin-google-analytics": "4.11.0",
    "gatsby-plugin-image": "2.11.1",
    "gatsby-plugin-manifest": "4.11.1",
    "gatsby-plugin-offline": "5.11.1",
    "gatsby-plugin-react-helmet": "5.11.0",
    "gatsby-plugin-robots-txt": "1.7.0",
    "gatsby-plugin-sharp": "4.11.1",
    "gatsby-plugin-sitemap": "5.11.1",
    "gatsby-plugin-typescript": "4.11.1",
    "gatsby-remark-autolink-headers": "5.11.1",
    "gatsby-remark-external-links": "0.0.4",
    "gatsby-remark-images": "6.11.1",
    "gatsby-remark-prismjs": "6.11.0",
    "gatsby-remark-reading-time": "1.1.0",
    "gatsby-remark-smartypants": "5.11.0",
    "gatsby-source-filesystem": "4.11.1",
    "gatsby-transformer-json": "4.11.0",
    "gatsby-transformer-remark": "5.11.1",
    "gatsby-transformer-sharp": "4.11.0",
    "postcss": "8.4.12",
    "prismjs": "1.27.0",
    "prop-types": "15.8.1",
    "react": "18.0.0",
    "react-dom": "18.0.0",
    "react-helmet": "6.1.0",
    "react-spring": "9.4.4",
    "typeface-dm-sans": "1.1.13",
    "typeface-lora": "1.1.13"
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/exec": "6.0.3",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.4",
    "@types/node": "16.11.26",
    "@types/react": "17.0.44",
    "@types/react-dom": "17.0.15",
    "@types/react-helmet": "6.1.5",
    "@types/vfile-message": "2.0.0",
    "@typescript-eslint/eslint-plugin": "5.19.0",
    "@typescript-eslint/parser": "5.19.0",
    "commitizen": "4.2.4",
    "eslint": "8.13.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-prettier": "4.0.0",
    "eslint-plugin-react": "7.29.4",
    "gatsby-plugin-postcss": "5.11.0",
    "husky": "7.0.4",
    "lint-staged": "12.3.7",
    "prettier": "2.6.2",
    "semantic-release": "19.0.2",
    "stylelint": "14.6.1",
    "stylelint-config-prettier": "9.0.3",
    "stylelint-config-standard": "25.0.0",
    "tailwindcss": "3.0.23",
    "typescript": "4.6.3"
  },
  "keywords": [
    "gatsby",
    "tailwindcss",
    "typescript"
  ],
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/alecgerona/alecgerona.io"
  },
  "bugs": {
    "url": "https://github.com/alecgerona/alecgerona.io/issues"
  }
}
